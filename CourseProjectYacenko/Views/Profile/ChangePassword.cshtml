@model CourseProjectYacenko.DTO.User.ChangePasswordDto
@{
    ViewData["Title"] = "Смена пароля";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0 text-center">Смена пароля</h3>
                </div>

                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    <form method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Текущий пароль *</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" required>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Новый пароль *</label>
                            <input asp-for="NewPassword" type="password" class="form-control" required>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Подтверждение пароля *</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-warning">Сменить пароль</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>