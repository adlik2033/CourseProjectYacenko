@using CourseProjectYacenko.DTO.User
@model UserDto
@{
    ViewData["Title"] = "Личный кабинет";
}
<div class="container">
    <h2>Личный кабинет</h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Информация о пользователе</h5>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <p><strong>ФИО:</strong> @Model.FullName</p>
                        <p><strong>Телефон:</strong> @Model.PhoneNumber</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Адрес:</strong> @Model.Address</p>
                        <p><strong>Паспорт:</strong> @Model.PassportData</p>
                        <p><strong>Дата регистрации:</strong> @Model.RegistrationDate.ToString("dd.MM.yyyy")</p>
                        <p>
                            <strong>Статус:</strong>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Активен" : "Заблокирован")
                            </span>
                        </p>
                        <a asp-action="Edit" class="btn btn-outline-primary">Редактировать</a>
                    }
                    else
                    {
                        <p>Данные не загружены</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Баланс</h5>
                    <span class="h4 text-success mb-0">@(Model?.Balance ?? 0) руб.</span>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-controller="Payment" asp-action="AddBalance" class="btn btn-success">Пополнить баланс</a>
                        <a asp-controller="Payment" asp-action="MyPayments" class="btn btn-outline-primary">История платежей</a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Активные тарифы</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Название тарифа</th>
                                    <th>Абонентская плата</th>
                                    <th>Интернет</th>
                                    <th>Минуты</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Стандарт</td>
                                    <td>500 руб./мес</td>
                                    <td>15 ГБ</td>
                                    <td>300 мин</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-danger">Отключить</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Премиум</td>
                                    <td>1000 руб./мес</td>
                                    <td>30 ГБ</td>
                                    <td>1000 мин</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-danger">Отключить</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <a asp-action="MyTariffs" class="btn btn-primary">Управление тарифами</a>
                </div>
            </div>
        </div>
    </div>
</div>