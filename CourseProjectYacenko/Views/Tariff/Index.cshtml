@model IEnumerable<CourseProjectYacenko.Models.TariffDto>
@{
    ViewData["Title"] = "Тарифы";
}

<div class="container">
    <h2>Доступные тарифы</h2>

    <div class="row mt-4">
        @if (Model != null && Model.Any())
        {
            foreach (var tariff in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow tariff-card">
                        <div class="card-header @(tariff.MonthlyFee < 500 ? "bg-success" : tariff.MonthlyFee < 800 ? "bg-warning" : "bg-danger") text-white">
                            <h5 class="card-title mb-0">@tariff.Name</h5>
                            @if (tariff.MonthlyFee < 500)
                            {
                                <span class="badge bg-light text-dark">Эконом</span>
                            }
                            else if (tariff.MonthlyFee < 800)
                            {
                                <span class="badge bg-light text-dark">Стандарт</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark">Премиум</span>
                            }
                        </div>
                        <div class="card-body">
                            <p class="card-text">@tariff.Description</p>
                            <div class="text-center mb-3">
                                <span class="display-6 text-primary">@tariff.MonthlyFee.ToString("N0")</span>
                                <span class="text-muted">руб./мес</span>
                            </div>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-wifi"></i> Интернет</span>
                                    <span class="badge bg-primary rounded-pill">@tariff.InternetTrafficGB ГБ</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-telephone"></i> Минуты</span>
                                    <span class="badge bg-success rounded-pill">@tariff.MinutesCount мин</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-chat"></i> SMS</span>
                                    <span class="badge bg-info rounded-pill">@tariff.SmsCount шт</span>
                                </li>
                            </ul>

                            @if (tariff.ConnectedServices != null && tariff.ConnectedServices.Any())
                            {
                                <div class="mb-3">
                                    <h6><i class="bi bi-plus-circle"></i> Включенные услуги:</h6>
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var service in tariff.ConnectedServices)
                                        {
                                            <span class="badge bg-secondary">@service.Name</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@tariff.Id" class="btn btn-outline-primary">Подробнее</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-controller="Profile" asp-action="Subscribe" method="post">
                                        <input type="hidden" name="tariffId" value="@tariff.Id" />
                                        <button type="submit" class="btn btn-success w-100">Подключить</button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-controller="Account" asp-action="Login" class="btn btn-success">Войти для подключения</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning">
                    <h5>Тарифы временно недоступны</h5>
                    <p>Пожалуйста, попробуйте позже.</p>
                </div>
            </div>
        }
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5>Калькулятор выбора тарифа</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Calculator">
                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Минуты в месяц:</label>
                        <input type="range" class="form-range" min="0" max="2000" step="100" value="300"
                               oninput="this.nextElementSibling.value = this.value + ' мин'">
                        <output class="form-text">300 мин</output>
                        <input type="hidden" name="minutes" value="300" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Интернет трафик:</label>
                        <input type="range" class="form-range" min="0" max="50" step="5" value="15"
                               oninput="this.nextElementSibling.value = this.value + ' ГБ'">
                        <output class="form-text">15 ГБ</output>
                        <input type="hidden" name="internet" value="15" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">SMS сообщения:</label>
                        <input type="range" class="form-range" min="0" max="500" step="50" value="100"
                               oninput="this.nextElementSibling.value = this.value + ' SMS'">
                        <output class="form-text">100 SMS</output>
                        <input type="hidden" name="sms" value="100" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Подобрать тариф</button>
            </form>
        </div>
    </div>
</div>

<style>
    .tariff-card {
        transition: transform 0.3s;
    }

        .tariff-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
</style>